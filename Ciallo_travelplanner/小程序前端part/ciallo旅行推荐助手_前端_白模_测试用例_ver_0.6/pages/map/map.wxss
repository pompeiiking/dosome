.route-tabs {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background: #f6f8fa;
  padding: 16rpx 0;
}
.tab-item {
  padding: 12rpx 32rpx;
  border-radius: 24rpx;
  background: #e6f3ff;
  color: #1890ff;
  font-weight: bold;
  margin: 0 8rpx;
}
.tab-item.active {
  background: #1890ff;
  color: #fff;
}
.popup-mask {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.popup {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx 32rpx 32rpx;
  min-width: 500rpx;
  max-width: 90vw;
  max-height: 70vh;
  overflow-y: auto;
  box-shadow: 0 8rpx 32rpx #1890ff22;
}
.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 18rpx;
}
.popup-sub {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.popup-activities {
  margin-top: 18rpx;
}
.popup-activity-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.popup-activity-item {
  font-size: 26rpx;
  color: #444;
  margin-bottom: 6rpx;
}
.popup-close {
  margin-top: 24rpx;
  color: #1890ff;
  font-size: 30rpx;
  text-align: center;
  font-weight: bold;
}
.map-back-btn {
  position: fixed;
  top: 40rpx;
  left: 32rpx;
  z-index: 1001;
  background: linear-gradient(90deg, #1890ff 0%, #36a3ff 100%);
  color: #fff;
  border-radius: 24rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx #1890ff22;
  text-align: center;
}
.nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  padding: 0 32rpx;
  background: linear-gradient(90deg, #e6f3ff 0%, #b3d8ff 100%);
  border-radius: 0 0 32rpx 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}
.back-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}
.back-icon {
  width: 40rpx;
  height: 40rpx;
}
.nav-title {
  font-size: 32rpx;
  color: #3a7afe;
  font-weight: bold;
}
.map-card {
  margin: 32rpx 32rpx 0 32rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 24rpx rgba(58,122,254,0.08);
  background: linear-gradient(180deg, #e6f3ff 0%, #fff 100%);
}
.mini-map {
  width: 100%;
  height: 300rpx;
}
.summary-card {
  margin: 32rpx;
  padding: 32rpx;
  border-radius: 32rpx;
  background: #fff;
  box-shadow: 0 4rpx 24rpx rgba(58,122,254,0.08);
}
.path-title {
  font-size: 36rpx;
  color: #3a7afe;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.score-row {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-top: 16rpx;
}
.score-label {
  color: #8ca9c9;
  font-size: 24rpx;
}
.score-value {
  color: #3a7afe;
  font-size: 28rpx;
  font-weight: bold;
}
.stops-list {
  margin: 0 32rpx 32rpx 32rpx;
}
.stop-card {
  margin-bottom: 32rpx;
  padding: 32rpx;
  border-radius: 32rpx;
  background: #f6f8fa;
  box-shadow: 0 2rpx 12rpx rgba(58,122,254,0.04);
}
.stop-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.stop-name {
  font-size: 32rpx;
  color: #222;
  font-weight: bold;
}
.stop-rhythm {
  font-size: 24rpx;
  color: #3a7afe;
  background: #e6f3ff;
  border-radius: 16rpx;
  padding: 4rpx 16rpx;
}
.stop-reason, .best-date {
  color: #8ca9c9;
  font-size: 24rpx;
  margin-top: 8rpx;
}
.play-items {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.play-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx 16rpx;
  box-shadow: 0 1rpx 4rpx rgba(58,122,254,0.04);
  font-size: 24rpx;
  color: #3a7afe;
  margin-right: 8rpx;
}
.marker-popup {
  position: fixed;
  left: 0; right: 0; bottom: 0;
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  background: rgba(0,0,0,0.2);
}
.popup-card {
  width: 80vw;
  margin-bottom: 48rpx;
  background: #fff;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(58,122,254,0.12);
  padding: 32rpx;
  text-align: center;
}
.close-popup {
  margin-top: 24rpx;
  background: linear-gradient(90deg, #3a7afe 0%, #36a3ff 100%);
  color: #fff;
  border-radius: 24rpx;
  padding: 12rpx 32rpx;
  border: none;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx #3a7afe22;
  transition: background 0.2s;
}
.close-popup:active {
  background: #3a7afe;
}
.fixed-back-btn {
  position: fixed;
  top: 32rpx;
  left: 32rpx;
  z-index: 1100;
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.12);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: box-shadow 0.2s;
}
.fixed-back-btn:active {
  box-shadow: 0 4rpx 16rpx #3a7afe44;
  background: #e6f3ff;
}
.summary-card, .stops-list {
  box-sizing: border-box;
} 