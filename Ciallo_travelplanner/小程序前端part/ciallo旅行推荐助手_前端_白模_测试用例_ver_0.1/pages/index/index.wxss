.container {
  padding: 20rpx;
  background: #f8f8f8;
}

.header {
  padding: 20rpx 0;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.content {
  height: calc(100vh - 180rpx);
  padding-bottom: 120rpx;
}

.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item text {
  font-size: 28rpx;
  color: #333;
}

.form-item input, .form-item picker, .form-item textarea {
  background: #f8f8f8;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.picker {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  color: #333;
}

.preference-section {
  margin-top: 30rpx;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.sub-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

/* 兴趣选择区域 */
.interest-area {
  width: 100%;
  height: auto;
  min-height: 200rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 10rpx;
}

.interest-list, .activity-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 10rpx;
}

.interest-item, .activity-item {
  width: calc(50% - 10rpx);
  min-height: 80rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.interest-item.selected {
  background: #e6f3ff;
  border: 1rpx solid #1890ff;
  color: #1890ff;
}

.activity-item.selected {
  background: #f0f9ff;
  border: 1rpx solid #40a9ff;
  color: #40a9ff;
}

.order-number {
  min-width: 40rpx;
  height: 40rpx;
  background: #1890ff;
  color: white;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
}

/* 游玩节奏 */
.pace-options {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 20rpx;
}

.pace-item {
  flex: 1;
  min-width: 200rpx;
  text-align: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.pace-item.selected {
  background: #e6f3ff;
  color: #1890ff;
  font-weight: bold;
}

/* 预算选择 */
.budget-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.budget-item {
  width: calc(50% - 10rpx);
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  text-align: center;
}

.budget-type {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.budget-range {
  font-size: 24rpx;
  color: #666;
}

.budget-item.selected {
  background: #e6f3ff;
  border: 1rpx solid #1890ff;
}

/* 具体游玩项目 */
.activities-container {
  margin-top: 20rpx;
}

.activity-category {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.category-title {
  font-size: 28rpx;
  font-weight: bold;
  padding: 20rpx 0;
  color: #333;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.activity-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 10rpx;
}

/* 高级选项 */
.form-item textarea {
  flex: 1;
  height: 120rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  background: #fff;
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(to right, #1890ff, #36a3ff);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

/* 可移动视图样式 */
movable-view {
  width: 100%;
  z-index: 2;
}

movable-area {
  width: 100%;
  overflow: hidden;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

/* 动画效果 */
.preference-section {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
